%html
	%head
		%title Horus
		%script{:type => "text/javascript", :src => "/javascripts/jquery-1.6.2.min.js"}
		%script{:type => "text/javascript", :src => "/javascripts/jquery-ui-1.8.16.custom.min.js"}
		%script{:type => "text/javascript", :src => "/javascripts/horus_api.js"}
		%link{:type => "text/css", :href => "css/blitzer/jquery-ui-1.8.16.custom.css", :rel => "stylesheet"}
		:javascript
		
			function openGameDialog(title, okBtnTitle, onOk) {
				$('#nickname').dialog({
					resizable: false,
					modal: true,
					title: title,
					hide: "puff",
					buttons: [{
						text: okBtnTitle,
						class: "default_button",
						click: function() {
							$(this).dialog("option", "close", function() {
								var nick = $('input#nickname').val();
								onOk(nick);
							});
							$(this).dialog("close");
						}
					}, {
						text: "Cancel",
						click: function() {
							$(this).dialog("close");
						}
					}]
				});			
			};
		
			function startNewGame() {
				openGameDialog("Start New Game", "Start", function(nick) {
					confirmStartNewGame(nick);
				});
			};
			function confirmStartNewGame(nick) {
				startGame(nick, function(gameId) {
					window.location = linkToGame(gameId);
				});
			};
			
			function joinThisGame(gameId) {
				openGameDialog("Join Game", "Join", function(nick) {
					confirmJoinThisGame(gameId, nick);
				});
			};
			function confirmJoinThisGame(gameId, nick) {
				joinGame(gameId, nick, function(gameId) {
					window.location = linkToGame(gameId);
				});
			};
			
			$(document).ready(function() {
				$("button#new-game").button();
				
				$('#start #new-game').click(function() {
					startNewGame();
				});
				
				$('input#nickname').keypress(function(e) {
					if (e.which == 13)
						$('.default_button').click();
				});
				
				$('#games a.link-to-game').click(function() {
					var gameId = $(this).attr('id');
					joinThisGame(gameId);
				});
			});
			
		%style{:type => "text/css", :media => "screen"}
			:plain
				div#nickname {
					display: none;
				}
				div#nickname span.comment {
					color: grey;
					font-style: italic;
					font-size: 12px;
					margin-bottom: 5px;
				}
			
	%body
		%div#nickname
			%span Your nickname:
			%input#nickname
		#start 
			%button#new-game Start new game
		#games
			%p Current games:
			%ul
			- @games.each do |game|
				%li
					%a{:class => "link-to-game", :id => "#{game.id}", :href => "#"}= "#{game.owner_nick}'s"